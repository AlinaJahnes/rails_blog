<h1>Hello, <%= @user.username%>.</h1>
<% if @posts.nil? %>
  <p>You haven't created any posts.</p>
<% else %>
  <h2>Here are all your posts.</h2>
  <% @posts.each do |post|%>
    <div><%= link_to post.title, post_path(post)%>
        <%= link_to "Edit", edit_post_path(post)%>
        <%= link_to "Delete", post, method: :delete %>
    </div>
  <% end %>
<% end %>

<%= link_to "Create a new post", new_post_path %>
